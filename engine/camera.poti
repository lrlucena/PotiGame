tipo Camera
  # construtor
	altura, largura: Inteiro
	jogador: Jogador

  # funções internas
	maior(a, b: Real) = se a > b então a senão b fim
	menor(a, b: Real) = se a > b então b senão a fim
  janela(jogador, janela, mapa: Real) = menor(maior(jogador - janela / 2, 0), mapa - janela)

	# metodos
	ox() = janela(jogador.x, jogo.largura, largura)
  oy() = janela(jogador.y, jogo.altura, altura)
fim
